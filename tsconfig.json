{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "ESNext",                     
    "rootDir": "src",                       
    "outDir": "dist",                       
    "moduleResolution": "node",             
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "skipLibCheck": true,                   
    "resolveJsonModule": true,              
    "allowSyntheticDefaultImports": true,   
    "types": ["node", "express"]
  },
  "include": ["src/**/*", "src/public/js/bootstrap.bundle.min.js", "src/public/js/bootstrap.esm.min.js", "src/public/js/bootstrap.min.js"],
  "exclude": ["node_modules", "dist"]
}
